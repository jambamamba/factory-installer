    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "gcc-10 - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/x86-build/steno-factory-installer",
            // "args": ["single_process=true"],
            "stopAtEntry": false,
            // "environment": [
            //     {
            //         "name":"LD_LIBRARY_PATH",
            //         "value":"${workspaceRoot}/extlibs/cpython/x86-build/"
            //     }
            // ],
            "cwd": "${workspaceRoot}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc-10 build active file",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
            "externalConsole": false
        }
    ]
}
